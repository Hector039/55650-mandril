<div>
    <h1>Listado de productos del carrito de {{user}}</h1>
    <section class="cart-container">
        {{#if isCartOccupied}}
        {{#each cartProducts}}
        <div class="products-cart">
            <div>
                <p id="product-title">{{product.title}}</p>
                <p id="product-price">Precio: {{product.price}}</p>
                <p id="product-description">{{product.description}}</p>
                <p id="product-quantity">Cantidad: {{this.quantity}}</p>
            </div>

            <div>
                <button onclick="deleteItem(`{{product._id}}`)">Eliminar producto</button>
            </div>

        </div>
        {{/each}}
        
        {{else}}
        <p>Ups! el carrito está vacío.</p>
        {{/if}}
    </section>

    <button onclick="emptyCart(`{{userCartId}}`)">Vaciar carrito</button>
    <a href="/"><button>Volver a los productos</button></a>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>{{!-- script de Axios en el cliente --}}
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>{{!-- script de Toastify --}}
<script src="/js/deleteProd.js"></script>{{!-- mi js --}}