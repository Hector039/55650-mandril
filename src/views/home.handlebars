<div class="welcome-container">
    {{#if isLogIn}}
    <h1>Bienvenido {{user}}!</h1>
    <a href="/logout"><button>Cerrar sesión</button></a>
    <a href="/carts"><button>Ir al carrito</button></a>
    {{else}}
    <h1>Bienvenido Invitado!</h1>
    <p>Loguéate para poder comprar</p>
    <a href="/login"><button>LogIn</button></a>
    {{/if}}

    {{#if isAdmin}}
    <div>
        <a href="/realtimeproducts"><button>Manager de Productos</button></a>
    </div>
    {{/if}}
</div>

<h2>Listado de productos:</h2>
{{#each docs}}
<div id="product-card">
    <p>ID: {{this._id}}</p>
    <p>Nombre: {{this.title}}</p>
    <p>Precio: {{this.price}}</p>
    <p>Links imágenes: {{this.thumbnails}}</p>
    <a href="/productdetail/{{this._id}}"><button>Ver detalles</button></a>
</div>
{{/each}}

{{#if showPaginate}}
<div class="pagination">
    <div class="pagination-container">
        {{#if hasPrevPage}}
        <a href="/?lim={{limit}}&pag={{prevPage}}"><button>{{prevPage}} <<< </button></a>
        {{/if}}
        <p class="actual-page">{{page}}</p>
        {{#if hasNextPage}}
        <a href="/?lim={{limit}}&pag={{nextPage}}"><button>>>> {{nextPage}}</button></a>
        {{/if}}
    </div>
</div>

<div class="total-pag">
    <p>Total páginas: {{totalPages}}</p>
</div>

{{/if}}